---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <!-- We don't need to load bundle.js anymore since Lit components are handled by Astro -->
  </head>
  <body>
    <slot />
  </body>
</html>